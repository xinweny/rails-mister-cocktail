<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Mr+Dafoe|Raleway|Yellowtail&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>
    <div class="header d-flex align-items-center justify-content-between px-4">
      <div class="d-flex align-items-center">
        <h1 id="title"><%= link_to 'Cocktails', cocktails_path %></h1>
        <%= image_tag 'hibiscus.png', class: 'logo ml-3 pb-2', width: 40, height: 40 %>
      </div>
      <div class="d-flex align-items-center">
        <%= form_tag(cocktails_path, method: :get, class: 'logo mx-4') do %>
          <%= text_field_tag :search, params[:search], placeholder: 'Search', class: 'form-control search-bar' %>
        <% end %>
        <%= link_to 'Add a Cocktail', new_cocktail_path, class: 'button add-button rounded-pill' %>
      </div>
    </div>

    <div class="container">
      <%= yield %>
    </div>
    <%= javascript_include_tag "application" %>
    <%= javascript_pack_tag "application" %>
  </body>
</html>
